
package week3_homework;
import static java.lang.System.*;
import java.util.*;


public class week3_homework_2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input=new Scanner(System.in);
        out.print("Enter N: ");
        int N=input.nextInt();
        
		for(int i=1;i<=N;i++)       
		{
		       if(i%2!=0){

		    	         for(int j=0;j<5-i;j++) {
		    	             System.out.print(" ");
		    	         }
		    	        for(int k=0;k<=i;k++) {
		    	            System.out.print("$ ");
		    	        }
		    	        System.out.println();  
		    	    
			        
		       }
		}
		
		
	}

}
